#include <iostream>
using namespace std;
int main() {
    int n,i,j,temp=0,comp=0,shift=0,loop;
     cout<<"enter number of loops"<<endl;
     cin>>loop;
     while(loop!=0){
    cout<<"\n enter number of elemts in an array"<<endl;
    cin>>n;
    int arr[n];
    cout<<"enter array"<<endl;
    for(i=0;i<n;i++){
        cin>>arr[i];
    }
    for(i=1;i<n;i++){
       j=i-1;
       temp=arr[i];
       while(j>=0&&arr[j]>temp){
           arr[j+1]=arr[j];
           j--;
           comp++;
           shift++;
       }
       arr[j+1]=temp;
       comp++;
    }
 
     
    for(i=0;i<n;i++){
        cout<< arr[i];
    }
        cout<<"\n total comparison "<<comp<<endl;
        cout<<"\n total shift "<<shift<<endl;
        shift=0;
        comp=0;
       loop--;
     }

    return 0;
}
